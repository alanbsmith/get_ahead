.container
  %h1 Your Favorites
  - @favorites_list.each_with_index do |program, i|
    #accordion.panel-group
      .panel.panel-default
        .panel-heading
          %h4.panel-title
            %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse#{i}"}
              = program.facility_name
            .panel-title.pull-right
              =link_to "", program_path(program), class: "glyphicon glyphicon-eye-open"
              =link_to "", root_path, class: "glyphicon glyphicon-envelope"
              =link_to "", remove_program_favorite_path(favorite, program_id: program.id), method: "post", class: "glyphicon glyphicon-remove"
        .panel-collapse.collapse{:id => "collapse#{i}"}
          .panel-body
            %table
              %thead
                %tr
                  %th Program Type
                  %th Enrollment
              %tbody
                %tr.text-center
                  %td= program.program_type
                  %td= program.enrollment

          

  
  